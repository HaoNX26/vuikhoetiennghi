                                                @*<a href="~/DocumentsSubmit/@Html.DisplayFor(item => infoCustomerWinDTO.FILE_AUTHORIZATION_LETTER)" target="_blank">Ảnh1</a>*@
                                                @{
                                                    string[] arrImgAuthor = infoCustomerWinDTO.FILE_AUTHORIZATION_LETTER.Split(';');
                                                    for (int i = 0; i < arrImgAuthor.Length; i++)
                                                    {
                                                        <img style="margin-right: 10px;" src="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgAuthor[i])" width="200" height="100" />
                                                        //<a style="margin-right: 10px;" href="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgAuthor[i])" target="_blank">Ảnh@(i + 1)</a>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row-info">
                                    <div class="row row-info">
                                        <div class="col-12 col-sm-6">
