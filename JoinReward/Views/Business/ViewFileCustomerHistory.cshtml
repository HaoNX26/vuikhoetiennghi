                                    <div class="name-info">
                                        <label><b>Ảnh tin nhắn thông báo trúng thưởng:  </b></label><br />
                                        @{
                                            string[] arrImgSmsWin = infoCustomerWinDTO.FILE_SMS_WIN.Split(';');
                                            for (int i = 0; i < arrImgSmsWin.Length; i++)
                                            {
                                                <img style="margin-right: 10px;" src="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgSmsWin[i])" width="300" height="200" />
                                                //<a style="margin-right: 10px;" href="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgSmsWin[i])" target="_blank">Ảnh@(i + 1)</a>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="form-row-info">
                                <div class="row row-info">
                                    <div class="col-12 col-sm-12">
                                        <input type="checkbox" id="5" asp-for="IS_ERROR5">
                                        <label for="IS_ERROR5"> Thiếu thông tin</label>
                                    </div>
                                </div>
                                <div class="row row-info">
                                    <div class="col-12 col-sm-12">
                                        <label asp-for="NOTE_ERROR5">
                                            Ghi chú
                                        </label>
                                        <textarea asp-for="NOTE_ERROR5" rows="3" class="form-control"></textarea>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

