                                        for (int i = 0; i < arrImgSerial.Length; i++)
                                        {
                                            <img style="margin-right: 10px;" src="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgSerial[i])" width="300" height="200" />
                                            //<a style="margin-right: 10px;" href="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgSerial[i])" target="_blank">Ảnh@(i + 1)</a>
                                        }
                                    }
