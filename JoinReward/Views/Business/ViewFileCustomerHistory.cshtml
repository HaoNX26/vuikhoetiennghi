                                                <img style="margin-right: 10px;" src="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgSmsCode[i])" width="300" height="200" />
                                                //<a style="margin-right: 10px;" href="~/DocumentsSubmit/@Html.DisplayFor(item => arrImgSmsCode[i])" target="_blank">Ảnh@(i + 1)</a>
                                            }
                                        }
                                    </div>
                                </div>
