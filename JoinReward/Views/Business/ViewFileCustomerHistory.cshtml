                                            <img src="~/DocumentsSubmit/@infoCustomerWinDTO.FILE_PRODUCT_PATH" width="200" height="100" />

                                            @*<a href="~/DocumentsSubmit/@infoCustomerWinDTO.FILE_INVOICE_PATH" target="_blank">Ảnh</a>*@
                                        }
